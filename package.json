{
  "name": "ollama-model",
  "version": "1.0.0",
  "description": "A web-based management interface for Ollama endpoints, allowing you to manage and interact with multiple Ollama instances from a single dashboard.",
  "author": "KhulnaSoft Lab <info@khulnasoft.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/khulnasoft-lab/ollama-model.git"
  },
  "main": "server.js",
  "type": "module",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon --watch server.js --watch public server.js",
    "debug": "node --inspect server.js",
    "debug:dev": "nodemon --inspect --watch server.js --watch public server.js",
    "test": "NODE_OPTIONS=--experimental-vm-modules jest --coverage",
    "test:watch": "NODE_OPTIONS=--experimental-vm-modules jest --watch",
    "test:ci": "NODE_OPTIONS=--experimental-vm-modules jest --ci --coverage",
    "lint": "eslint . --ext .js",
    "lint:fix": "eslint --fix . --ext .js",
    "format": "prettier --write \"**/*.{js,json,html,css}\"",
    "audit": "npm audit --audit-level=high",
    "prepare": "husky install",
    "docker:build": "docker build -t ollama-model .",
    "docker:run": "docker run -p 3000:3000 --env-file .env ollama-model"
  },
  "keywords": [
    "ollama",
    "llm",
    "model-manager",
    "api",
    "docker",
    "nodejs"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "axios": "^1.7.9",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^17.0.0",
    "express": "^5.0.0",
    "express-async-handler": "^1.2.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.0.0",
    "http-errors": "^2.0.0",
    "morgan": "^1.10.0",
    "pino": "^9.0.0",
    "pino-http": "^9.0.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.20.0",
    "eslint": "^9.34.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-html": "^8.0.0",
    "eslint-plugin-node": "^11.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.0",
    "jest": "^29.0.0",
    "lint-staged": "^15.0.0",
    "nodemon": "^3.1.9",
    "prettier": "^3.0.0",
    "supertest": "^6.3.4"
  },
  "lint-staged": {
    "*.{js,json,html,css}": [
      "prettier --write"
    ],
    "*.{js,html}": [
      "eslint --fix"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ]
}
